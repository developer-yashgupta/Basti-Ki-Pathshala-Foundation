<%- include('../partials/header', { title }) %>

<!-- Admin Login Section -->
<section class="section" style="min-height: 80vh; display: flex; align-items: center; background: linear-gradient(135deg, var(--bg-light) 0%, var(--white) 100%);">
  <div class="container">
    <div style="max-width: 450px; margin: 0 auto;">
      <!-- Login Card -->
      <div class="card" style="box-shadow: var(--shadow-heavy); border: none;">
        <!-- Header -->
        <div style="text-align: center; margin-bottom: 2rem;">
          <div style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--primary-yellow), var(--secondary-yellow)); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 2rem;">
            ğŸ”
          </div>
          <h1 style="margin: 0 0 0.5rem 0; color: var(--dark-blue);">Admin Login</h1>
          <p style="margin: 0; color: var(--text-gray); font-size: 0.95rem;">Access the Basti Ki Pathshala Foundation admin panel</p>
        </div>

        <!-- Error Message -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error" style="margin-bottom: 1.5rem;">
            <strong>Login Failed:</strong> <%= error %>
          </div>
        <% } %>

        <!-- Login Form -->
        <form method="post" action="/admin/login">
          <div class="form-group">
            <label for="email">ğŸ“§ Email Address</label>
            <input
              id="email"
              name="email"
              type="email"
              required
              placeholder="Enter your admin email"
            />
          </div>

          <div class="form-group">
            <label for="password">ğŸ”’ Password</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              placeholder="Enter your password"
            />
          </div>

          <div style="margin-top: 2rem;">
            <button class="btn" type="submit" style="width: 100%; padding: 14px; font-size: 16px; font-weight: 600;">
              ğŸ”“ Login to Admin Panel
            </button>
          </div>
        </form>

        <!-- Footer -->
        <div style="text-align: center; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--light-gray);">
          <p style="margin: 0; color: var(--text-gray); font-size: 0.9rem;">
            ğŸ”’ Secure admin access for Basti Ki Pathshala Foundation
          </p>
          <p style="margin: 0.5rem 0 0 0; color: var(--text-gray); font-size: 0.85rem;">
            <a href="/" style="color: var(--primary-yellow); text-decoration: none;">â† Back to Website</a>
          </p>
        </div>
      </div>

      <!-- Additional Info -->
      <div style="text-align: center; margin-top: 2rem;">
        <div class="card" style="background: linear-gradient(135deg, rgba(255, 205, 5, 0.1), rgba(247, 181, 0, 0.1)); border: 1px solid rgba(255, 205, 5, 0.2);">
          <h3 style="margin: 0 0 1rem 0; color: var(--dark-blue);">Admin Panel Features</h3>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; text-align: left;">
            <div>
              <h4 style="margin: 0 0 0.5rem 0; color: var(--dark-blue); font-size: 0.9rem;">ğŸ“ Content Management</h4>
              <p style="margin: 0; font-size: 0.85rem; color: var(--text-gray);">Manage programs, stories, and events</p>
            </div>
            <div>
              <h4 style="margin: 0 0 0.5rem 0; color: var(--dark-blue); font-size: 0.9rem;">ğŸ‘¥ User Management</h4>
              <p style="margin: 0; font-size: 0.85rem; color: var(--text-gray);">Handle volunteers and donations</p>
            </div>
            <div>
              <h4 style="margin: 0 0 0.5rem 0; color: var(--dark-blue); font-size: 0.9rem;">ğŸ¤ Partner Management</h4>
              <p style="margin: 0; font-size: 0.85rem; color: var(--text-gray);">Manage partnerships and collaborations</p>
            </div>
            <div>
              <h4 style="margin: 0 0 0.5rem 0; color: var(--dark-blue); font-size: 0.9rem;">ğŸ“Š Analytics & Reports</h4>
              <p style="margin: 0; font-size: 0.85rem; color: var(--text-gray);">View impact metrics and reports</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Additional styles for login page */
.alert {
  padding: 1rem;
  border-radius: var(--border-radius);
  margin-bottom: 1rem;
}

.alert-error {
  background: rgba(220, 38, 38, 0.1);
  border: 1px solid var(--danger-red);
  color: var(--danger-red);
}

/* Input focus effects */
input:focus {
  transform: translateY(-1px);
  box-shadow: 0 0 0 3px rgba(255, 205, 5, 0.1), 0 4px 12px rgba(0, 0, 0, 0.1);
}

/* Button hover effect */
button.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 205, 5, 0.3);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .section {
    padding: 2rem 0;
    min-height: 100vh;
  }

  .card {
    margin: 1rem;
    padding: 1.5rem;
  }
}
</style>

<%- include('../partials/footer') %>
