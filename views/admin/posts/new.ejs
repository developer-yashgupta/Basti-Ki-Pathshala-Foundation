<%- include('../../partials/header', { title }) %>

<!-- Admin Header -->
<section class="section" style="background: linear-gradient(135deg, var(--success-green), #047857); color: var(--white); padding: 2rem 0;">
  <div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
      <div>
        <h1 style="color: var(--white); margin: 0 0 0.5rem 0;">ğŸ“ Create New Story</h1>
        <p style="color: var(--white); opacity: 0.9; margin: 0;">Share an inspiring success story or impact narrative</p>
      </div>
      <div style="display: flex; gap: 1rem; align-items: center;">
        <a href="/admin/posts" class="btn btn-outline" style="border-color: var(--white); color: var(--white);">â† Back to Stories</a>
      </div>
    </div>
  </div>
</section>

<!-- Form Section -->
<section class="section">
  <div class="container">
    <div style="max-width: 800px; margin: 0 auto;">
      <div class="card">
        <h2 style="margin: 0 0 2rem 0; color: var(--dark-blue);">Story Details</h2>

        <form method="post" action="/admin/posts" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">ğŸŒŸ Story Title *</label>
            <input
              id="title"
              name="title"
              required
              placeholder="Enter an inspiring story title"
            />
            <small style="color: var(--text-gray); font-size: 0.85rem;">
              Create a compelling title that captures the essence of this success story
            </small>
          </div>

          <div class="form-group">
            <label for="excerpt">ğŸ“ Story Excerpt</label>
            <textarea
              id="excerpt"
              name="excerpt"
              rows="3"
              placeholder="Brief summary of the story (optional)"
            ></textarea>
            <small style="color: var(--text-gray); font-size: 0.85rem;">
              A short excerpt that appears in story listings and previews
            </small>
          </div>

          <div class="form-group">
            <label for="body_md">ğŸ“– Full Story (Markdown)</label>
            <textarea
              id="body_md"
              name="body_md"
              rows="12"
              placeholder="Tell the complete story using Markdown formatting..."
            ></textarea>
            <small style="color: var(--text-gray); font-size: 0.85rem;">
              Use Markdown syntax for formatting. Include details about the person's journey, challenges overcome, and impact achieved.
            </small>
          </div>

          <div class="form-group">
            <label for="cover">ğŸ“¸ Story Image</label>
            <input
              id="cover"
              type="file"
              name="cover"
              accept="image/*"
            />
            <small style="color: var(--text-gray); font-size: 0.85rem;">
              Upload an image that represents this story (JPG, PNG, GIF)
            </small>
          </div>

          <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button class="btn btn-success" type="submit">
              âœ… Create Story
            </button>
            <a href="/admin/posts" class="btn btn-outline">
              âŒ Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../../partials/footer') %>

