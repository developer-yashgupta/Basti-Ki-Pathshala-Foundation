<%- include('../../partials/header', { title }) %>

<!-- Admin Header -->
<section class="section" style="background: linear-gradient(135deg, var(--secondary-yellow), #d97706); color: var(--white); padding: 2rem 0;">
  <div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
      <div>
        <h1 style="color: var(--white); margin: 0 0 0.5rem 0;">ğŸ“… Events Management</h1>
        <p style="color: var(--white); opacity: 0.9; margin: 0;">Create and manage community events and activities</p>
      </div>
      <div style="display: flex; gap: 1rem; align-items: center;">
        <a href="/admin" class="btn btn-outline" style="border-color: var(--white); color: var(--white);">â† Dashboard</a>
        <a href="/admin/events/new" class="btn" style="background: var(--white); color: var(--dark-blue);">+ New Event</a>
      </div>
    </div>
  </div>
</section>

<!-- Events List -->
<section class="section">
  <div class="container">
    <% if (rows && rows.length > 0) { %>
      <div class="text-center mb-2">
        <h2>Upcoming & Past Events</h2>
        <p>Manage community events, workshops, and activities</p>
      </div>

      <div class="grid-2">
        <% rows.forEach(event => { %>
          <div class="card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
              <div style="width: 60px; height: 60px; background: var(--secondary-yellow); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                ğŸ“…
              </div>
              <div>
                <h3 style="margin: 0; color: var(--dark-blue);"><%= event.title %></h3>
                <% if (event.event_date) { %>
                  <p style="margin: 0; color: var(--text-gray); font-size: 0.9rem;">
                    ğŸ“… <%= new Date(event.event_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </p>
                <% } %>
              </div>
            </div>

            <div style="margin-bottom: 1rem;">
              <% if (event.location) { %>
                <p style="margin: 0 0 0.5rem 0;">
                  <strong>ğŸ“ Location:</strong> <%= event.location %>
                </p>
              <% } %>

              <% if (event.event_date) { %>
                <%
                  const eventDate = new Date(event.event_date);
                  const today = new Date();
                  const isUpcoming = eventDate > today;
                %>
                <p style="margin: 0 0 0.5rem 0;">
                  <strong>Status:</strong>
                  <span style="background: <%= isUpcoming ? 'var(--success-green)' : 'var(--text-gray)' %>; color: white; padding: 0.25rem 0.5rem; border-radius: 12px; font-size: 0.8rem;">
                    <%= isUpcoming ? 'ğŸ”œ Upcoming' : 'âœ… Past' %>
                  </span>
                </p>
              <% } %>

              <% if (event.created_at) { %>
                <p style="margin: 0; color: var(--text-gray); font-size: 0.85rem;">
                  Created: <%= new Date(event.created_at).toLocaleDateString() %>
                </p>
              <% } %>
            </div>

            <% if (event.description_md) { %>
              <div style="background: var(--bg-light); padding: 1rem; border-radius: var(--border-radius); margin-bottom: 1rem;">
                <p style="margin: 0; color: var(--text-gray); font-size: 0.9rem;">
                  <%= event.description_md.substring(0, 150) %>...
                </p>
              </div>
            <% } %>

            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
              <a href="/events" class="btn btn-outline" style="font-size: 0.9rem;" target="_blank">ğŸ‘ï¸ View</a>
              <a href="/admin/events/<%= event.id %>/edit" class="btn" style="background: var(--secondary-yellow); font-size: 0.9rem;">âœï¸ Edit</a>
              <form method="post" action="/admin/events/<%= event.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?')">
                <button class="btn" style="background: var(--danger-red); color: var(--white); font-size: 0.9rem;" type="submit">ğŸ—‘ï¸ Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="text-center" style="padding: 4rem 0;">
        <div style="width: 120px; height: 120px; background: var(--bg-light); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 2rem; font-size: 3rem;">
          ğŸ“…
        </div>
        <h2>No Events Yet</h2>
        <p style="max-width: 500px; margin: 0 auto 2rem; color: var(--text-gray);">
          Start engaging your community by creating events, workshops, and activities. Events help build stronger connections with volunteers and beneficiaries.
        </p>
        <a href="/admin/events/new" class="btn" style="background: var(--secondary-yellow);">+ Create Your First Event</a>
      </div>
    <% } %>
  </div>
</section>

<!-- Quick Stats -->
<% if (rows && rows.length > 0) { %>
<section class="section section-alt">
  <div class="container">
    <div class="text-center mb-2">
      <h2>Events Overview</h2>
    </div>

    <div class="grid-4">
      <div class="card text-center">
        <h3 style="color: var(--secondary-yellow); font-size: 2rem; margin: 0 0 0.5rem 0;"><%= rows.length %></h3>
        <p style="font-weight: 600; margin: 0;">Total Events</p>
      </div>

      <div class="card text-center">
        <%
          const upcomingEvents = rows.filter(e => e.event_date && new Date(e.event_date) > new Date()).length;
        %>
        <h3 style="color: var(--success-green); font-size: 2rem; margin: 0 0 0.5rem 0;"><%= upcomingEvents %></h3>
        <p style="font-weight: 600; margin: 0;">Upcoming</p>
      </div>

      <div class="card text-center">
        <h3 style="color: var(--primary-yellow); font-size: 2rem; margin: 0 0 0.5rem 0;"><%= rows.filter(e => e.location).length %></h3>
        <p style="font-weight: 600; margin: 0;">With Location</p>
      </div>

      <div class="card text-center">
        <h3 style="color: var(--text-gray); font-size: 2rem; margin: 0 0 0.5rem 0;"><%= rows.filter(e => e.description_md).length %></h3>
        <p style="font-weight: 600; margin: 0;">With Description</p>
      </div>
    </div>
  </div>
</section>
<% } %>

<%- include('../../partials/footer') %>

